#home.container
    .row
        .col-sm-9.col-md-9.col-lg-9
            .row
                .col-sm-5.col-md-5.col-lg-5
                    .info-card(style='text-align:center;')
                        .main-picture(ng-switch='user.kind')
                            img(ng-src='photos/{{user.profilePhoto}}', alt='')
                        .kind-user(ng-switch='user.kind')
                            div(ng-switch-when='player')
                                h3 {{user.player.firstName}} {{user.player.lastName}}
                            div(ng-switch-when='coach')
                                h3 {{user.coach.firstName}} {{user.coach.lastName}}
                            div(ng-switch-when='team')
                                h3 {{user.team.name}}
                            div(ng-switch-when='league')
                                h3 {{user.league.name}}
                            div(ng-switch-when='fan')
                                h3 {{user.fan.firstName}} {{user.fan.lastName}}
                        .follower-user
                            p
                                span.total  {{followersNumber}}&nbsp;
                                span Loyal Fans
                        //
                          <div>
                          <p>Friends : {{friendsNumber}}</p>
                          </div>
                .col-md-7.col-sm-7.col-xs-7
                    .upcoming-schedule
                        .table-header
                            h3 Upcomming Schedule
                        table.table.table-striped
                            tr
                                th Date
                                th Time
                                th Location
                                th Event
                            tr(ng-repeat="game in games")
                                td  {{ game.date | date : 'EEE d/MM' }}
                                td  {{ game.time | date:'shortTime' }}
                                td  Stadium  - {{ game.stadiumArena }},
                                    | {{ game.team1.teamName }} vs {{ game.team2.teamName }}
                                td.text-center(ng-if="user.kind == 'team' || user.kind == 'coach' ")
                                   a(ui-sref="manageStats.statsEdit({id: game._id, isLive: 'liveResults'})")
                                      img(src='assets/images/play-btn.png', alt='')
                                   a(ui-sref='manageStats')
                                      img(src='assets/images/stat-btn.png', alt='')
            home-navbar
            .tab-content
                div(ui-view='')
            .home-wall
                wall(events='events')
                    publisher
        .col-sm-3.col-md-3.col-lg-3
            #right_sidebar
                #goals
                    a(href='')
                        img(src='assets/images/logo.png', alt='')
                    a(ui-sref='personalGoals')
                        h2 Goals
                    ul
                        li 2 touchdowns away from top off in league
                        li 1 win from 1st place
                        li 223 yds from 1000 yard receiver
                        li 3 TDs away from highest scoring team leaque history
                #instagram_feed
                    h2 Instagram Feed
                    img(src='assets/images/img1.jpg', alt='')
                    img(src='assets/images/img2.jpg', alt='')
                    img(src='assets/images/img3.jpg', alt='')
                    img(src='assets/images/img4.jpg', alt='')
                    img(src='assets/images/img5.jpg', alt='')
                    img(src='assets/images/img6.jpg', alt='')
                #twitter_feed
                    h2 Twitter Feed
                    .twit.clearfix
                        img.twitter_img(src='assets/images/twitter-img1.png', alt='')
                        .twit_content
                            h3
                                | Luke Wroblewski
                                span @ DE
                            p Bring on the self-driving cars. They use turn signals.
                            img(src='assets/images/twitter-icon.png', alt='')
                    .twit.clearfix
                        img.twitter_img(src='assets/images/twitter-img2.png', alt='')
                        .twit_content
                            h3
                                | Luke Wroblewski
                                span @ DE
                            p Bring on the self-driving cars. They use turn signals.
                            img(src='assets/images/twitter-icon.png', alt='')
                    .twitter_footer.clearfix
                        p
                            a(href='#') Follow us on Podium
                            |  for the latest news


