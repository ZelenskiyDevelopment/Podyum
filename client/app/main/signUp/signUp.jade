    carousel
    <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="landing-big-font">
    <h1>Connect with the most elite players and coaches around the world!</h1><br>
    </div>
    <carousel class="center-block" interval="myInterval" style="margin-bottom: 20px; border-radius: 320px">
    <slide ng-repeat="slide in slides" active="slide.active">
    <img ng-src="{{slide.image}}" class="img-rounded">
    </slide>
    </carousel>
    </div>
