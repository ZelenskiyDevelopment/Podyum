.col-md-12.col-sm-12.col-xs-12
  .row(style='margin-top: 50px;')
    .col-md-2.col-sm-2.col-xs-2
    .col-sm-8.col-md-8.col-xs-8.creator-background
      #form-container
        .page-header.text-center
          md-progress-linear(md-mode='determinate', value='{{progressValue}}')
          h1(ng-show='beginCreating()', style="margin-bottom: 30px; font-size: 40px; font-family: 'Oswald', sans-serif;") Welcome to Podyum!
          .form-group.row
            .col-md-4.col-sm-4.col-xs-4
            .col-md-4.col-sm-4.col-xs-4(ng-show='beginCreating()')
              a(ui-sref='creator.type')
                md-button.create-button
                  | Create your profile
                  // <span class="glyphicon glyphicon-circle-arrow-right"></span>
            .col-md-4.col-sm-4.col-xs-4
        form#signup-form(ng-submit='processForm()')
          #form-views(ui-view='')

    .col-md-12.col-sm-2.col-xs-2
