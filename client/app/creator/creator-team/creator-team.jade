.col-md-12.col-sm-12.col-xs-12(style="font-size: 18px; font-family: 'Verdana', sans-serif; font-weight: 100")
  .col-md-2.col-sm-1
  .col-md-8.col-sm-10.col-xs-12

    .col-md-12.col-sm-12.col-xs-12
      .col-md-6.col-sm-6.col-xs-6
        .div(class="creator-q") What's your team name?
      .col-md-6.col-sm-6.col-xs-6
        label
          input(type="text" class="form-inline" id="name" ng-model="formData.name")

    .col-md-12.col-sm-12.col-xs-12
      .col-md-6.col-sm-6.col-xs-6
        .div(class="creator-q") When was your team founded?
      .col-md-6.col-sm-6.col-xs-6
        label
          input(type="date" class="form-inline" id="founded" ng-model="formData.founded" placeholder="yyyy-MM-dd")

    .col-md-12.col-sm-12.col-xs-12
      .col-md-6.col-sm-6.col-xs-6
        .div(class="creator-q")  What's your address?
      .col-md-6.col-sm-6.col-xs-6
        label
          input(type="text" class="form-inline" id="address" ng-model="formData.address")

    .col-md-12.col-sm-12.col-xs-12
      .col-md-6.col-sm-6.col-xs-6
        .div(class="creator-q")  What's the link to your page?
      .col-md-6.col-sm-6.col-xs-6
        label
          input(type="text" class="form-inline" id="link" ng-model="formData.link")



    .col-md-12.col-sm-12.col-xs-12
      .col-md-6.col-sm-6.col-xs-6
        .div(class="creator-q")  What's the your phone?
      .col-md-6.col-sm-6.col-xs-6
        label
          input(type="text" class="form-inline" international-phone-number id="phone" ng-model="formData.phone")


    .col-md-12.col-sm-12.col-xs-12
      .col-md-6.col-sm-6.col-xs-6
        .div(class="creator-q")  What's your mascot?
      .col-md-6.col-sm-6.col-xs-6
        label
          input(type="text" class="form-inline" id="hometown" ng-model="formData.mascot")

    .col-md-12.col-sm-12.col-xs-12
      .col-md-6.col-sm-6.col-xs-6
        .div(class="creator-q")  What are your team colors?
      .col-md-6.col-sm-6.col-xs-6
        label
          input(colorpicker='rgb' type='text' ng-model='formData.color')
    .col-md-12.col-sm-12.col-xs-12
      .col-md-6.col-sm-6.col-xs-6
        .div(class="creator-q")  What's your home stadium/arena?
      .col-md-6.col-sm-6.col-xs-6
        label
          input(type="text" class="form-inline" id="stadium" ng-model="formData.stadium")

  .col-md-2.col-sm-1

  .col-md-12.col-sm-12.col-xs-12
    .col-md-2.col-sm-1
    .col-md-8.col-sm-10.col-xs-12
      .big-q Short biography
      .col-md-12.col-sm-12.col-xs-12
        textarea(ng-model="formData.bio" value="bio" style="height: 100px; width: 100%")
    .col-md-2.col-sm-1

.col-md-12.col-sm-12.col-xs-12
  .col-md-2.col-sm-1
  .col-md-8.col-sm-10.col-xs-12
    br
    country-select.creator-country-select(ng-model="formData.country")
  .col-md-2.col-sm-1

  .col-md-12.col-sm-12.col-xs-12
    .col-md-2.col-sm-1
    .col-md-8.col-sm-10.col-xs-12
      one-user-selector(label='"President/owner"' items='allHumanUsers' selected-item='formData.president')
    .col-md-2.col-sm-1

  .col-md-12.col-sm-12.col-xs-12
    .col-md-2.col-sm-1
    .col-md-8.col-sm-10.col-xs-12
      one-user-selector(label='"Athletic director"' items='allHumanUsers' selected-item='formData.athleticDirector')
    .col-md-2.col-sm-1
  .col-md-12.col-sm-12.col-xs-12
    .col-md-2.col-sm-1
    .col-md-8.col-sm-10.col-xs-12
      one-user-selector(label='"Head coach"' items='allCoaches' selected-item='formData.headCoach')
    .col-md-2.col-sm-1

  .col-md-12.col-sm-12.col-xs-12
    .col-md-2.col-sm-1
    .col-md-8.col-sm-10.col-xs-12
      .creator-q.select-text(style="border: 0px")
        assign-selector(kind='"team"' model='formData.sportData[0].data.myLeagues' items='allLeagues' label='"Select leagues"')
    .col-md-2.col-sm-1



.col-xs-12.col-sm-12.col-md-12.row
  .col-xs-2.col-sm-3.col-md-3
  .col-xs-8.col-sm-6.col-md-6
    .col-xs-12.col-sm-12.col-md-12.row
      .col-xs-6.col-sm-6.col-md-6
        a(ui-sref="creator.photo").md-button.create-button(ng-click="changeProgress(20)")
          .i(class="fa fa-arrow-left" style="font-size: 22px; margin: 0; padding: 0;")
          | &#32; Back
      .col-xs-6.col-sm-6.col-md-6
        a(ui-sref="creator.finish").md-button.create-button(ng-click="changeProgress(100)" ng-show="formData.type && formData.photo")
          | Next step &#32;
          .i(class="fa fa-arrow-right" style="font-size: 22px; margin: 0; padding: 0;")
  .col-xs-2.col-sm-3.col-md-3
