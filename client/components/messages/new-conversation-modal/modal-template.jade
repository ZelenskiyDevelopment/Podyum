md-dialog(aria-label='Send new message' flex='50')
  form
    md-toolbar
      .md-toolbar-tools
        h2 Send new message
        span(flex)
        md-button(ng-click='cancel()').md-icon-button
          md-icon(md-svg-src='assets/images/ic_close_24px.svg' aria-label='Close dialog')
    md-dialog-content
      receivers-selector(selected-users='conversation.members')
      .md-padding
        md-input-container(flex)
          label Message
          textarea(ng-model='conversation.message')
    .md-actions(layout='row')
      span(flex)
      md-button(ng-disabled='_.isEmpty(conversation.message) || _.isEmpty(conversation.members)' ng-click='answer(conversation)').md-primary Send!
      md-button(ng-click='cancel()').md-primary Cancel
